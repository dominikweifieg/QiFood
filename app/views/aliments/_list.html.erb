<div class="column wide">
<table cellspacing="0">
	<thead>
	<tr>
		<th><%=  Aliment.human_attribute_name 'name' %><%= render :partial => 'sorter', :locals => {:value => 'name'}%></th> 
		<th><%= Aliment.human_attribute_name 'latin_name'%><%= render :partial => 'sorter', :locals => {:value => 'latin_name'}%></th>
		<th><%= Aliment.human_attribute_name 'pinyin'%><%= render :partial => 'sorter', :locals => {:value => 'pinyin'}%></th>
		<th><%= Aliment.human_attribute_name 'chinese'%><%= render :partial => 'sorter', :locals => {:value => 'chinese'}%></th>
		<th><%= t('aliment.savor') %><%= render :partial => 'sorter', :locals => {:value => 'savor'}%></th>
		<th><%= t('aliment.temperature') %><%= render :partial => 'sorter', :locals => {:value => 'temperature'}%></th>
		<th><%= t('aliment.category') %><%= render :partial => 'sorter', :locals => {:value => 'category_id'}%></th>
	<% if current_user_in_role? User::EDITOR %>
		<th></th>
	<% end %>
	<% if current_user_in_role? User::ADMIN %>
		<th></th>
	<% end %>
  </tr>
	</thead>
	<tbody>
		<%= render :partial => "table", :collection => @aliments, :as => :aliment %>
	</tbody>
	<tfoot>
		<tr>
			<td colspan="9">
				<%= will_paginate @aliments , :params => params %>
			</td>
		</tr>
	</tfoot>
</table>
</div>