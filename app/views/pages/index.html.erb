<%title t('pages.index.title')%>

<table>
  <tr>
    <th>Title</th>
    <th>Permalink</th>
    <th>Body</th>
  </tr>

<% for page in @pages %>
  <tr>
    <td><%=h page.title %></td>
    <td><%=h page.permalink %></td>
    <td><%=h(truncate(page.body, 60)) %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
		<% if current_user_in_role? User::ADMIN %>
			<td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
		<% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_page_path %>
