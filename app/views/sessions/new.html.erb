<%title t('user.login')%>

<% form_for @user_session, :url => {:controller => 'sessions', :action => 'create'} do |f| -%>
<div class"column">
<%= f.error_messages %>	
<%= f.label :login , t('user.login')%>
<%= f.text_field :login %>

<%= f.label :password, t('user.password') %>
<%= f.password_field :password %>

<div class="column wide">
	<fieldset class="buttons">
		<%= submit_tag t('user.login') %>
	</fieldset>
</div>
<% end -%>
