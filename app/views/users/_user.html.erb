<tr class="<% if user_counter % 2 == 0 %>even<% else %>odd<% end %>">
	<td><%= link_to h(user.name), user %></td>
	<td><%= h(user.first_name) %></td>
	<td><%= h(user.profile.quote) %></td>
	<% if current_user %><td><%= link_to_unless (user == current_user) || (current_user.friends.exists? user.id), 
		t('friendship.add_as_friend'), friendships_path(:friend_id => user.id), :method => :post %></td><% end %>
	<% if current_user_in_role? User::ADMIN %><td><%= link_to t('common.edit'), edit_user_path(user) %></td><% end %>
</tr>